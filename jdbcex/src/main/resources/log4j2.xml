<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN"> <!-- 설정 파일 로딩 중 출력되는 로그 레벨 -->
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT"> <!-- 콘솔 출력 설정 -->
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info"> <!-- 기본 로그 레벨 설정 -->
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>